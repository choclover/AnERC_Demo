<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:weightSum="1" android:orientation="vertical"
	android:background="@drawable/background">
	<TextView android:id="@+id/textView1" android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent" android:gravity="center_vertical|center_horizontal"
		android:background="@drawable/login_title" android:text="@string/login_title"
		android:layout_height="40dp"></TextView>
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/rlayout2"
		android:layout_weight="0.17">
		<ImageView android:layout_width="wrap_content" android:id="@+id/imageView1"
			android:src="@drawable/logo" android:layout_height="wrap_content"
			android:layout_centerVertical="true" android:layout_alignParentLeft="true"
			android:layout_marginLeft="14dp"></ImageView>
		<TextView android:textSize="7pt"
			android:text="i@HOME致力于为普通家庭提供远程实时安防及家居设备控制服务, 让所有家庭都能轻松享受安全、舒适、时尚的智能家居生活。"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView3" android:layout_width="180dip"
			android:textColor="@color/black" android:layout_height="wrap_content"
			android:layout_centerVertical="true" android:layout_alignParentRight="true"
			android:layout_marginRight="16dp"></TextView>
	</RelativeLayout>
	<View android:layout_width="wrap_content" android:id="@+id/view2"
		android:layout_height="1px" android:background="@color/grey"></View>

	<RelativeLayout android:layout_width="match_parent"
		android:id="@+id/relativeLayout1" android:layout_height="152dp"
		android:layout_weight="0.72">
		<ImageView android:layout_width="91dp" android:id="@+id/ImageView02"
			android:src="@drawable/myhome_default" android:layout_height="91dp"
			android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></ImageView>
		<TextView android:text="@string/my_phonenum"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/textView2" android:layout_width="wrap_content"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/etPhonenum"
			android:layout_alignBottom="@+id/etPhonenum" android:layout_toLeftOf="@+id/ImageView02"></TextView>
		<TextView android:text="@string/login_pwd"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:id="@+id/TextView01" android:layout_width="wrap_content"
			android:textColor="#000000" android:layout_height="wrap_content"
			android:layout_below="@+id/etPhonenum" android:layout_toLeftOf="@+id/ImageView02"
			android:layout_marginTop="23dp"></TextView>
		<EditText android:inputType="textPassword"
			android:layout_width="150dip" android:id="@+id/etPasswd"
			android:text="12345678" android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/TextView01"
			android:layout_alignBottom="@+id/TextView01"
			android:layout_alignLeft="@+id/etPhonenum">
			<requestFocus></requestFocus>
		</EditText>
		<EditText android:inputType="phone" android:layout_width="150dip"
			android:id="@+id/etPhonenum" android:text="15365185898"
			android:layout_height="wrap_content" android:layout_below="@+id/ImageView02"
			android:layout_alignParentRight="true" android:layout_marginRight="19dp"
			android:layout_marginTop="23dp"></EditText>
	</RelativeLayout>

	<View android:layout_width="wrap_content" android:id="@+id/view1"
		android:layout_height="2px" android:background="@color/grey"></View>
	<RelativeLayout android:layout_height="53dp"
		android:layout_width="match_parent" android:id="@+id/relativeLayout3">
		<ImageView android:id="@+id/imageView03"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:src="@drawable/attention" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" android:layout_marginLeft="44dp"></ImageView>
		<ImageView android:id="@+id/ImageView01"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:src="@drawable/about" android:layout_alignParentLeft="true"
			android:layout_centerVertical="true" android:layout_marginLeft="121dp"></ImageView>
		<Button android:id="@+id/btnLogin" android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" android:layout_marginRight="27dp"
			android:text="@string/login" android:layout_alignParentRight="true"
			android:textSize="10pt"></Button>
	</RelativeLayout>

</LinearLayout>
			
			
